        let currentQuestion = 0;
        let answers = new Array(50).fill(null);
        let showResults = false;

        function loadQuestion() {
            const quiz = quizData[currentQuestion];
            const content = document.getElementById('content');
            
            let optionsHTML = '';
            quiz.options.forEach((option, index) => {
                const isSelected = answers[currentQuestion] === index;
                optionsHTML += `
                    <label class="option ${isSelected ? 'selected' : ''}">
                        <input type="radio" name="option" value="${index}" ${isSelected ? 'checked' : ''} 
                               onchange="selectOption(${index})">
                        ${option}
                    </label>
                `;
            });

            const progressPercent = ((currentQuestion + 1) / 50) * 100;
            document.getElementById('progress-fill').style.width = progressPercent + '%';

            content.innerHTML = `
                <div class="question-number">Soru ${currentQuestion + 1} / 50</div>
                <div class="question-text">${quiz.question}</div>
                <div class="options">${optionsHTML}</div>
                <div class="buttons">
                    <button class="btn-prev" onclick="prevQuestion()" ${currentQuestion === 0 ? 'disabled' : ''}>‚Üê √ñnceki</button>
                    <button class="btn-next" onclick="nextQuestion()" ${answers[currentQuestion] === null ? 'disabled' : ''}>Sonraki ‚Üí</button>
                </div>
            `;
        }

        function selectOption(index) {
            answers[currentQuestion] = index;
            loadQuestion();
        }

        function nextQuestion() {
            if (currentQuestion < 49) {
                currentQuestion++;
                loadQuestion();
            } else {
                showFinalResults();
            }
        }

        function prevQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                loadQuestion();
            }
        }

        function showFinalResults() {
            let correctCount = 0;
            quizData.forEach((quiz, index) => {
                if (answers[index] === quiz.correct) {
                    correctCount++;
                }
            });

            const percentage = (correctCount / 50) * 100;
            const progressPercent = 100;
            document.getElementById('progress-fill').style.width = progressPercent + '%';

            let emoji = 'üò¢';
            let message = 'Daha iyi yapabilirsin!';
            
            if (percentage >= 90) {
                emoji = 'üèÜ';
                message = 'Harika! ƒ∞lk Yardƒ±m bilgin m√ºkemmel!';
            } else if (percentage >= 80) {
                emoji = 'üéâ';
                message = '√áok ba≈üarƒ±lƒ±! Tebrikler!';
            } else if (percentage >= 70) {
                emoji = 'üëç';
                message = 'ƒ∞yi ba≈üardƒ±n!';
            } else if (percentage >= 60) {
                emoji = 'üòä';
                message = 'Orta d√ºzey ba≈üarƒ±. Biraz daha √ßalƒ±≈ümalƒ±sƒ±n.';
            }

            const content = document.getElementById('content');
            content.innerHTML = `
                <div class="results">
                    <div class="emoji">${emoji}</div>
                    <h2>Tebrikler!</h2>
                    <div class="score">${correctCount}/50</div>
                    <div class="score-bar">
                        <div class="score-fill" style="width: ${percentage}%"></div>
                    </div>
                    <div class="score-description">${message}</div>
                    <p style="color: #666; margin: 20px 0; font-size: 1.1rem;">
                        Ba≈üarƒ± Oranƒ±: <strong>${percentage.toFixed(1)}%</strong>
                    </p>
                    <button class="btn-restart" onclick="location.reload()">üîÑ Yeniden Ba≈üla</button>
                </div>
            `;
        }

        // ƒ∞lk soruyu y√ºkle
        loadQuestion();
    </script>
</body>
</html>
